{
  "appId": "com.accounting.app",
  "appName": "حسابداری و مدیریت کارمندان",
  "webDir": "dist/public",
  "server": {
    "androidScheme": "https",
    "cleartext": true,
    "hostname": "localhost",
    "allowNavigation": ["*"]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#121212",
      "androidScaleType": "CENTER_CROP"
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon_config_sample",
      "iconColor": "#488AFF"
    },
    "Keyboard": {
      "resize": "body",
      "style": "DARK",
      "resizeOnFullScreen": true
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  }
}
